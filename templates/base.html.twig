<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		{# set page title #}
		{% set pageName = 'Accueil' %}
		{% if breadcrumbs is defined %}
			{% set pageName = breadcrumbs|last %}
		{% endif %}
		<title>{% block title pageName ~ ' | Observatoire des saisons' %}</title>
		<meta http-equiv="X-UA-Compatible" content="IE=edge">
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<link rel="shortcut icon" href="{{ asset('media/layout/icons/logo_ods.svg') }}" type="image/svg+xml">
		{# steelsheet #}
		{% block stylesheets %}
			{{ encore_entry_link_tags('app') }}
		{% endblock %}
	</head>

	<body>
		<div class="global-layout">
			{% block menu %}
				{% include 'layout/menu.html.twig' %}
			{% endblock %}
			<div class="main{{  app.request.attributes.get('_route') is same as('index') ? ' home' }}">
				{% block topbar %}
					{% include 'layout/topbar.html.twig' %}
				{% endblock %}
				{% block content %}{% endblock %}
				{% block footer %}
					{% include 'layout/footer.html.twig' %}
				{% endblock %}
			</div>
		</div>
		{% block javascripts %}
			{{ encore_entry_script_tags('app') }}
		{% endblock %}
	</body>
</html>
