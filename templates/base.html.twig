<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="fr" lang="fr">
	<head>
		<meta charset="UTF-8">
		{# set page title #}
		{% set pageName = breadcrumbs is defined ? breadcrumbs|last : 'Accueil' %}
		<title>{% block title pageName ~ ' | Observatoire des saisons' %}</title>

		<meta http-equiv="X-UA-Compatible" content="IE=edge">
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<link rel="shortcut icon" href="{{ asset('media/layout/icons/logo_ods.svg') }}" type="image/svg+xml">

		{# steelsheet #}
		{% block stylesheets %}
			{{ encore_entry_link_tags('app') }}
		{% endblock %}
	</head>

	<body>
		<div class="global-layout">
			{% block menu %}
				{% include 'layout/menu.html.twig' %}
			{% endblock %}

			<div class="main {{ app.request.attributes.get('_route') is same as('index') ? 'home' }}">

				{% block topbar %}
					{% include 'layout/topbar.html.twig' %}
				{% endblock %}

				{% block content %}{% endblock %}

				{% block footer %}
					{% include 'layout/footer.html.twig' %}
				{% endblock %}
			</div>
		</div>

		{# JS #}
		{% block javascripts %}
			{{ encore_entry_script_tags('app') }}
		{% endblock %}
	</body>
</html>
