{#
    *: required
    [int..int]: array indexes ([...] if no precise length defined)

    stades* array
        [...](stade_label*) string
    App\Entity\Observation[]|array observations*

#}
{% set STADES = constant('App\\Entity\\Evenement::DISPLAY_LABELS') %}
{% for obs in observations %}
    {% set column_start = (obs.getDateObs()|date("n")) + 2 %}
    {% set row_start = 0 %}
    {% set obsStade = STADES[obs.getEvenement().getNom()] %}
    {% for stade_label in stades %}
        {% if stade_label == obsStade  %}
            {% set row_start = loop.index %}
        {% endif %}
    {% endfor %}
    <div class="stade-marker" data-year="{{ obs.getDateObs()|date("Y") }}" data-tab="{{ obs.getUser().getId() }}" style="{{ "background-image: url(#{obs.getPhoto}); grid-column-start: #{column_start}; grid-column-end: #{column_start + 1};grid-row-start: #{row_start}; grid-row-end: #{row_start + 1};" }}{{ hide ? 'display:none;' }}">
        <div class="stade-marker-text {{ loop.last ? 'last' }}">
            <div class="stade-text">{{ obsStade }} - stade {{ obs.getEvenement().getStadeBbch() }}</div>
            <div class="stade-date">Le {{ obs.getDateObs()|localizeddate('none', 'none', 'fr', null, 'd MMMM y') }}</div>
        </div>
    </div>
{% endfor %}