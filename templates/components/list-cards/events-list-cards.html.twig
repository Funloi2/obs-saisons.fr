{#
    *: required
    [int..int]: array indexes ([...] if no precise length defined)

    id*: int
    event*: object (Post event)

#}
{% set event_dates = [event.startDate] %}
{% if event.endDate != event.startDate %}
    {% set event_dates = event_dates|merge([event.endDate]) %}
{% endif %}
<div id="{{ event.title|slugify }}" class="list-cards-item" data-id="{{ id }}">
    <div class="dual-blocks-container">
        {% for date in event_dates %}
            <div class="event-date {{ loop.index == 2 ? 'last' }}">
                {{ date|date("j") }}<br>{{ date|date("M") }}
            </div>
        {% endfor %}
    </div>

    <a href="{{ path('evenements_show', {'slug': event.slug}) }}" class="item-name-block">
        <div class="item-heading-dropdown ">{{ event.title|raw }}</div>
        <div class="item-name pointer-orange-icon">{{ event.location }}</div>
    </a>

    <div class="item-details">
        <div>
            <a href="" class="bolder">{{ event.author.getDisplayName() }}</a>
            - {{ event.createdAt|date("j/m/Y") }}
        </div>
    </div>

</div>