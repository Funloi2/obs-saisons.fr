{#
    *: required,
    [int..int]: array indexes ([...] if no precise length defined)

    events_dates*: array of 1 or 2
        [...](date*) date
#}
<div class="dual-blocks-container">
    {% for date in events_dates %}
    <div class="event-date {{ loop.index == 2 ? 'last' }}">
        {{ date|date("j") }}<br>{{ date|date("M") }}
    </div>
    {% endfor %}
</div>